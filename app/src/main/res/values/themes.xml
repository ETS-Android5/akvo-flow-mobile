<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Flow.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:listViewStyle">@style/Flow.ListView</item>
    </style>

    <style name="FlowAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="FlowAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!--On older devices, for some reason the text appears in black without this style-->
    <style name="FlowAppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FlowAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/orange_main</item>
        <item name="colorPrimaryDark">@color/orange_disabled</item>
        <item name="colorAccent">@color/green</item>

        <!-- Makes sure the navigation drawer icon is white on older devices-->
        <item name="colorControlNormal">@color/white</item>

        <item name="android:windowBackground">@color/app_background_main</item>

        <item name="android:listViewStyle">@style/Flow.ListView</item>
        <item name="listitem_bg1">@drawable/listitem_row_1</item>
        <item name="listitem_bg2">@drawable/listitem_row_2</item>

        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColorSecondary">@color/text_color_primary</item>
        <item name="android:textColorTertiary">@color/text_color_primary</item>
    </style>

</resources>